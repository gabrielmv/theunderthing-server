server {
    listen      80;

    server_name bitzero.dinaren.ml;
    return 301 https://bitzero.dinaren.ml:443$request_uri;

}

server {
    listen        443 ssl;
    server_name   bitzero.dinaren.ml;

    ssl_certificate /certs/config/live/dinaren.ml/cert.pem;
    ssl_certificate_key /certs/config/live/dinaren.ml/privkey.pem;

    location / {
        proxy_pass        http://10.0.0.101:5000;
        proxy_set_header  X-Real-IP  $remote_addr;
        proxy_set_header       Host            $host;
        proxy_set_header        Host            10.0.0.101:5000;
        proxy_set_header X-Forwarded-Host $server_name:$server_port;
        proxy_set_header        X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header        X-Forwarded-Proto $scheme;

        proxy_hide_header       Referer;
        proxy_hide_header       Origin;
        proxy_set_header        Referer                 '';
        proxy_set_header        Origin                  '';
        add_header              X-Frame-Options         "SAMEORIGIN";

        proxy_redirect off;
        proxy_buffering off;
    }
}